<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorBlack"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judulArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Merukyah Mandiri"
            android:textColor="@color/yellows"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tglartikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="19-12-2017"
            android:textColor="@color/yellows"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/contentArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Klik Untuk Melihat Detail "
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>