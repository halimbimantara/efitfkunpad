<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="16dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Harap Selalu Absen Menggunakan Aplikasi E-Absensi Selama Dalam Masa Ujicoba ..!!"
                android:textColor="@color/colorRed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_simpeg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="KEMENTERIAN DESA DAN PEMBANGUNAN DAERAH TERTINGGAL DAN TRANSMIGRASI"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="19 : 00 : 00"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab_order"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_below="@+id/ll_titles"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="60dp"
            android:src="@drawable/fingerprint"
            app:backgroundTint="@color/colorgreen"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal" />

        <TextView
            android:id="@+id/tv_info_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_order"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_infotap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_order"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="TAP IN"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Absensi Hari ini"
                        android:textSize="8pt" />

                    <ProgressBar
                        android:id="@+id/pg_inout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/absen_datang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/absen_pulang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text=""
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>